<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bckg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step counter"
        android:layout_gravity="center"
        android:padding="24dp"
        android:layout_margin="6dp"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/stepCountTargetTextView"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Sample goal: 5000"
        />
    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="130dp"
        android:layout_height="200dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/circular"
        android:padding="10dp"
        android:progressDrawable="@drawable/progress"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/footsteps_8738400"/>
        <TextView android:id="@+id/stepCountTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Steps: 0"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/distance"/>
        <TextView android:id="@+id/stepDistanceTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Distance: 0"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/time"/>
        <TextView android:id="@+id/stepTimeTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Time: 0"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pause"
        android:textColor="@color/white"
        android:onClick="onPauseButtonPressed"/>
</LinearLayout>